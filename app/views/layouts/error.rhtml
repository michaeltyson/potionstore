<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<title><%=$STORE_PREFS['store_name']%></title>
    <link rel="icon" href="/favicon.png" type="image/png"/>
	<style media="all" type="text/css">
	    @import "<%= stylesheet_path 'store.css' %>";
	    @import "<%= stylesheet_path 'mytheme.css' %>";
	</style>
	<%= javascript_include_tag "store.js" %>
    
<!--[if lt IE 7]>
<script language="JavaScript">window.attachEvent("onload", correctPNG);</script>
<![endif]-->
</head>
<body>
	<div id="page" class="narrow">
		<div id="page_top">
			<% if not $STORE_PREFS['company_logo_path'].blank? -%>
			<div id="logo"><a href="<%=$STORE_PREFS['company_url']%>">
				<img src="<%=$STORE_PREFS['company_logo_path']%>" alt="<%=$STORE_PREFS['company_name']%>"/></a>
			</div>
			<% end -%>

			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>

			<center>
				<%= @content_for_layout %>
			</center>
		</div>
	</div>
	<% if is_live?() && ! $STORE_PREFS['google_analytics_account'].blank? -%>
	<script src="https://ssl.google-analytics.com/urchin.js" type="text/javascript"></script>
	<script type="text/javascript">
		_uacct = "<%=$STORE_PREFS['google_analytics_account']%>";
		urchinTracker();
	</script>
	<% end -%>
</body>
</html>
