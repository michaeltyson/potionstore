<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title><%=$STORE_PREFS['store_name']%></title>
    <link rel="icon" href="/favicon.png" type="image/png"/>
	<style media="all" type="text/css">
		@import "<%= stylesheet_path 'store.css' %>";
		@import "<%= stylesheet_path 'mytheme.css' %>";
	</style>
<!--[if lt IE 7]>
<script language="JavaScript">window.attachEvent("onload", correctPNG);</script>
<![endif]-->
    <%= javascript_include_tag "jquery.js", "store.js", "jquery.validate.js", :cache => true %>
    <%= yield :head %>
</head>
<body>
<div id="page" class="narrow">
	<div id="page_top">
		<% if not $STORE_PREFS['company_logo_path'].blank? -%>
		<div id="logo"><a href="<%=$STORE_PREFS['company_url']%>"><img src="<%=$STORE_PREFS['company_logo_path']%>" alt="<%=$STORE_PREFS['company_name']%>"/></a>
		</div>
		<% end -%>
		<h1><%=$STORE_PREFS['store_name']%></h1>
		<div class="tm"></div><img class="tr" src="<%= image_path('store/rounded_tr.png') -%>" alt="rounded border"/>
	</div>
	<div id="page_content" class="narrow">
		<div class="ccolumn narrow solo">
			<%= @content_for_layout %>
		</div>
		<div class="clear">&nbsp;</div>
	</div>
	<div id="footer">
		<div id="copyright"><p><%=$STORE_PREFS['copyright_html']%> Powered by <a href="http://www.potionfactory.com/potionstore">Potion Store</a></p></div>
	</div>
</div>
<% if is_live?() && ! $STORE_PREFS['google_analytics_account'].blank? -%>
<script type="text/javascript" src="https://ssl.google-analytics.com/urchin.js"></script>
<script type="text/javascript">
_uacct = "<%=$STORE_PREFS['google_analytics_account']%>";
urchinTracker();
</script>
<% end -%>
<% if is_live?() && $STORE_PREFS['include_mint'] == true -%>
<script type="text/javascript" src="/mint/?js"></script>
<% end -%>
</body>
</html>
